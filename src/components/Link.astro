---
const url =
  'https://docs.google.com/spreadsheets/d/e/2PACX-1vQE--MqUSBJmleSETWCOVQ0ygA_GHnGKjZrHjKZ1YyPSwjH0uDm3Pogdw2CHv_06LhmZyKudEDkzObV/pub?gid=0&single=true&output=csv';

const response = await fetch(url);

const data = await response.text();

const rows = data
  .split('\n')
  .slice(1)
  .map((row) => {
    const [icono, texto, link] = row.split(',');

    return { icono, texto, link };
  });
---

<div
  class='flex w-full rounded-sm bg-white px-4 py-2 transition-all delay-75 hover:scale-105'>
  {
    rows.map((row) => (
      <>
        <p>{row.icono}</p>
        <p>{row.texto}</p>
        <p>{row.link}</p>
      </>
    ))
  }
</div>
